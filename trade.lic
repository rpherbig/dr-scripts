  def wait_to_arrive
    @caravan_being_led = true
    wipe_bescort_skills
    Flags.reset('trade-bescort')
    Flags.reset('trade-ferry-arrival')
    Flags.reset('trade-barge')
    while Script.running?('bescort')
      pause 1.5
      if Flags['trade-bescort']
