    @caravan_room_descriptions[@caravan.adjective] ||= @caravan.adjective
    DRRoom.room_objs.find { |obj| obj =~ /#{@caravan_room_descriptions[@caravan.adjective]}/ && obj =~ /#{@caravan.noun}/ }
