  private

  def warn(message)
    echo(@test_symbol) if @test_symbol
    echo("WARNING:< #{message}  >")
    @warning_count += 1
  end

  def error(message)
    echo(@test_symbol) if @test_symbol
    echo("ERROR:< #{message}  >")
    @error_count += 1
  end

